                                        <td>{{ marque.designation }}</td>
                                        <td>
                                            <ul class="table-options">
                                                <a href="{{ path('simulation_crm_update_marque',{'id':marque.id}) }}">
                                                    <button class="btn btn-warning btn-xs">Modifier</button>
                                                </a>
                                                <a href="{{ path('simulation_crm_delete_marque',{'id':marque.id}) }}"  onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette marque?')">
