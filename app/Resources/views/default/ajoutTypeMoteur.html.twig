                        </div>
                    </div>
                    <!-- ... Your content goes here ... -->
                    <div class="row">
                        <form  method="post" action="" class="validate form-horizontal" enctype="multipart/form-data" id="basicForm">
                            <div class="row ajout-article">
                                {{ form_widget(form._token) }}
                                <div class="row col-sm-12">
                                    <div class="form-group">
                                        <div class="col-sm-4">
                                            {% if logo==null %}
                                            <img src="{{ asset("image/logo.jpg") }}" width="150px;">
                                            {% else %}
                                            <img src="{{ asset("image/typeMoteur/")~logo }}" width="150px;">
                                            {% endif %}
                                            {{ form_widget(form.file)}}
                                        </div>
                                        <div class="col-sm-6">
                                            <label class="control-label">{{"Nom"|trans}}</label>
                                            {{ form_errors(form.designation)}}
                                            {{ form_widget(form.designation, {'attr': {'class': 'form-control autocomplete','placeholder':"Nom"|trans}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            <label class="control-label">{{"Puissance"|trans}}</label>
                                            {{ form_errors(form.Puissanceid)}}
                                            {{ form_widget(form.Puissanceid, {'attr': {'class': 'form-control autocomplete','placeholder':"Cylindrée"|trans}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group ">

                                    </div>
                                </div>

                                {{form_rest(form)}}
                                <div class="btn-group mr5 pull-right">
                                    <button type="reset" class="btn btn-danger btn-quirk btn-stroke">{{'Annuler'|trans}}</button>
                                </div>
                                <div class="btn-group mr5 pull-right">
                                    <button type="submit" class="btn btn-primary btn-quirk btn-stroke">{{'Valider'|trans}}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
